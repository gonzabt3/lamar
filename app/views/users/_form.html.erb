<div class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">  <%= form_with(model: user, url: users_path(user), method: :put) do |form| %>
      <header class="modal-card-head">
        <p class="modal-card-title">Mi perfil</p>
        <button class="delete" aria-label="close"></button>
      </header>
      <section class="modal-card-body">
        <div class="field">
          <label class="label">Name</label>
          <div class="control">
            <%= form.text_field :name, class:"input", placeholder:"Nombre" %>
          </div>
        </div>
      </section>
      <footer class="modal-card-foot">
        <%= form.submit "Guardar cambios", class: "button is-success" %>
        <button class="button">Cancelar</button>
      </footer>
    <% end %>
  </div>
</div>